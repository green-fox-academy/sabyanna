

@model datapleasework.ViewModels.MyViewModel

@using datapleasework.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    @*<link rel="stylesheet" href="styles.css" type="text/css" />*@
    <title></title>
    
</head>
<body class="container">
    <h2>Edit your todo: @Model.Todo.Title</h2>
    <form action="/Home/?id=@Model.Todo.Id" method="post">
        <div class="form-group">
            <label for="todo.Title">Title</label>
            <input type="text" name="todo.Title" value="@Model.Todo.Title" class="form-controll" />
        </div>

        <div class="form-group">
            <label for="todo.IsUrgent">Urgency</label>
            <input type="checkbox" name="todo.isUrgent" asp-for="@Model.Todo.IsUrgent" />
        </div>

        <div class="form-group">
            <label for="todo.IsDone">Active</label>
            <input type="checkbox" name="todo.IsDone" asp-for="@Model.Todo.IsDone" />
        </div>

        <label>Assignee</label>
        <select asp-for="AssigneeId" asp-items="@Model.Assignees"></select>



       

        <button type="submit">Update</button>




